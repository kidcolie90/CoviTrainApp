<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

 <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>



  <div class="field">
    <%= form.label :summary %>
    <%= form.text_field :summary %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <div class="field">  <!-- added to include catagory id in dropdown menu for new posts, catagory id was added late through db migration!-->
  
    <%= form.label :category_id %> 
    <%= form.select :category_id, Category.all.collect{ |c| [c.title, c.id]} %>  <!-- using array to display-- title on select feild and id will be saved as option value from select form--!>
  </div>

  <div class="field">
    <%= form.label :active %>
    <%= form.check_box :active %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
